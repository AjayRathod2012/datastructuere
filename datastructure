#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    for(int i = 0; i < n; i++) {
        cout << i << " ";
    }

    cout << endl;

    int j = 0;
    while(j < n) {
        cout << j << " ";
        j++;
    }

    cout << endl;

    for(int k = 0; k < n; k++) {
        cout << k * 2 << " ";
    }

    return 0;
}
